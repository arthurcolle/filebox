<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @upload.title %>
</p>

<p>
  <strong>Content:</strong>
  <% urlarr = @upload.content.to_s.split("http://s3.amazonaws.com/colle-filebox/") %>
  <% @url = ("https://colle-filebox.s3.amazonaws.com/"+urlarr[1]).split("?")[0] %>

  <iframe src="/pdfjs/web/viewer.html?file=<%=@url%>" style="border: 0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
</p>

<%= link_to 'Edit', edit_upload_path(@upload) %> |
<%= link_to 'Back', uploads_path %>
